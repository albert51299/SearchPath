<Window x:Class="MVVM.SearchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Search completed" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="0 3 0 0">Shortest path between</TextBlock>
        <Canvas Background="Transparent" Width="25" Height="25" Margin="124,0,142,145">
            <Ellipse Width="25" Height="25" Stroke="Black" Fill="Gray"></Ellipse>
            <TextBlock Text="{Binding strStartNode}" Margin="5 3 0 0"></TextBlock>
        </Canvas>
        <TextBlock Margin="155 3 0 0">and</TextBlock>
        <Canvas Background="Transparent" Width="25" Height="25" Margin="180,0,142,145">
            <Ellipse Width="25" Height="25" Stroke="Black" Fill="Gray"></Ellipse>
            <TextBlock Text="{Binding strEndNode}" Margin="5 3 0 0"></TextBlock>
        </Canvas>
        <TextBlock Margin="210 3 0 0">is</TextBlock>
        <TextBlock Margin="220 3 0 0" Text="{Binding length}"></TextBlock>
        <TextBlock Margin="0 25 0 0">Path:</TextBlock>
        <TextBlock Text="{Binding path}" Margin="30 25 0 0"></TextBlock>
    </Grid>
</Window>
